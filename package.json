{
  "name": "thera_challenge",
  "version": "1.0.0",
  "description": "Thera Challenge - Desenvolvimento de API RESTful para gerenciamento de pedidos e produtos",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:server": "json-server --watch database/db.json --port 3001 --routes database/routes.json --middlewares database/middleware.js",
    "db:reset": "tsx database/seeds/reset-db.ts",
    "db:dev": "npm run db:server"
  },
  "keywords": [],
  "author": "jtalcantara.dev@gmail.com",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.31",
    "jest": "^29.7.0",
    "json-server": "^1.0.0-beta.5",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
